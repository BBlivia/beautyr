  <div class="row">
    <p  class="text-l">By: <%= user.userName %></p>
    <h1> IG Name: <%= post.title %></h1>
    
    <div class="col-md-6">
      <img src="<%= post.image%>" class="img-fluid" alt="Responsive image">
    
      <div class="d-flex justify-content-between">
      <form
      class="col-1 "
      action="/post/likePost/<%= post.id %>?_method=PUT"
      method="POST"
    >
    <button type="submit" class="  fa fa-heart"></button> 
    <h3 class="inline"> <%= post.likes %></h3>
  </form>

    <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3 "
        >
          <button class=" ml- 10  fa fa-trash" type="submit"></button>
        </form>

     
      </div>
    </div>
  <div class="list-unstyled">
   
        <div class="p-1 g-2">
        <h3 class="font-weight-bold"> Title: <%= post.serviceProvider %></h3>
        <p class="font-weight-bold">LOCATION: <%= post.location %></p>
        <p class="">EXPERIENCE: <%= post.caption %></p>
     

       </div>
  </div>
      

  
  <!--Comments-->

  <div class="mt-5">
    <h2 class="text-3xl">Add a comment</h2>
    <form action="/comment/createComment/<%=post._id%>" method="POST">
      <div class="mb-3">
          <label for="comment" class="form-label"></label>
          <textarea type="text" class="form-control" id="comment" name="comment" placeholder="add comment"></textarea>
      </div>
      <button type="submit" class="btn btn-outline-primary">Submit</button>
    </form>
    </div>


    <!-- Display comments using For Loop -->
    <div >
      
      
    <ul tabindex="0">
      <% for(var i=0; i<comments.length; i++) {%>
        <li class="d-flex justify-content-between  ">
          <!--Add user attribution-->
          <span> <%= comments[i].createdByUsername%> says: "<%= comments[i].comment%>" 
            
            <form
                  action="/comment/deleteComment/<%=post._id%>/<%= comments[i]._id %>?_method=PUT"
                  method="POST"
                  >
                  <button type="submit" class="  fa fa-heart"></button>
                </form>
                </form>
          <!--If comment was created by current user, then show delete button-->
           <%if(comments[i].createdById == user.id){ %>
                <form
                  action="/comment/deleteComment/<%=post._id%>/<%= comments[i]._id %>?_method=DELETE"
                  method="POST"
                  >
                  <button type="submit" class="  fa fa-trash"></button>
                </form>
                <%}%>
        </li>
      <% } %>
   
    </ul>
  </div>

  
  


    
  </div>



  




