<!-- component -->
<div class="bg-gray-100 p-4 ">
  <div class="bg-white border rounded-sm max-w-md">
    <div class="flex items-center px-4 py-3">
      <img class="h-8 w-8 rounded-full" src=""/>
      <div class="ml-3 ">
        <span class="text-sm font-semibold antialiased block leading-tight">8fact</span>
        <span class="text-gray-600 text-xs block"> <p class="font-weight-bold">LOCATION: <%= post.location %></p></span>
        <h3 class=""> Title: <%= post.serviceProvider %></h3>
      </div>
     
    </div>
    <img src="<%= post.image%>" />

    <div class="flex items-center justify-between mx-4 mt-3 mb-2">
      <div class="flex gap-5">
        
        <form
            class="col-1"
            action="/post/likePost/<%= post.id %>?_method=PUT"
            method="POST"
          >
          <button type="submit" class="">
            <svg fill="#262626" height="24" viewBox="0 0 48 48" width="24"><path d="M34.6 6.1c5.7 0 10.4 5.2 10.4 11.5 0 6.8-5.9 11-11.5 16S25 41.3 24 41.9c-1.1-.7-4.7-4-9.5-8.3-5.7-5-11.5-9.2-11.5-16C3 11.3 7.7 6.1 13.4 6.1c4.2 0 6.5 2 8.1 4.3 1.9 2.6 2.2 3.9 2.5 3.9.3 0 .6-1.3 2.5-3.9 1.6-2.3 3.9-4.3 8.1-4.3m0-3c-4.5 0-7.9 1.8-10.6 5.6-2.7-3.7-6.1-5.5-10.6-5.5C6 3.1 0 9.6 0 17.6c0 7.3 5.4 12 10.6 16.5.6.5 1.3 1.1 1.9 1.7l2.3 2c4.4 3.9 6.6 5.9 7.6 6.5.5.3 1.1.5 1.6.5.6 0 1.1-.2 1.6-.5 1-.6 2.8-2.2 7.8-6.8l2-1.8c.7-.6 1.3-1.2 2-1.7C42.7 29.6 48 25 48 17.6c0-8-6-14.5-13.4-14.5z"></path>   
            </svg>
            </button>
          </form>
        
    
  </div>

  <%if(post.user == user.id){ %>
    <form 
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3 "
        >
        <div class="mr-3">
          <button class=" mr-10  fa fa-trash" type="submit">Delete</button>
        </div>
         
        
      </form>
        <%}%>
       
       
    </div>

    <div class="font-semibold text-sm mx-4 mt-2 mb-4"> <%= post.likes %> likes</div>
    <div class="pt-1">
      <div class="mb-2 text-sm">
        <span class="font-medium mr-2"><%= user.userName %></span> Lord of the Rings is my favorite film-series. One day I'll make my way to New Zealand to visit the Hobbiton set!
      </div>
    </div>

     

        <div class="dropdown dropdown-bottom w-full">
          <label tabindex="0"  class="text-sm mb-2 text-gray-400 cursor-pointer font-medium">View all <%= comments.length %> comments</label>
        <ul tabindex="0" class="dropdown-content w-full ">
      <% for(var i=0; i<comments.length; i++) {%>
        <li class="d-flex justify-content-between  "> 
          <!--Add user attribution-->
          <div class="mb-2 text-sm">
          <span class="font-medium mr-2"> <%= comments[i].createdByUsername%> </span>
          <span> <%= comments[i].comment%> </span> 
          </div>
            <form 
                  action="/comment/likeComment/<%=post._id%>/<%= comments[i]._id %>?_method=PUT"
                  method="POST"
                  >
                  <button type="submit" class="">
                  <svg aria-label="Like" class="_ab6-" color="black" fill="black" height="12" role="img" viewBox="0 0 24 24" width="12"><path d="M16.792 3.904A4.989 4.989 0 0 1 21.5 9.122c0 3.072-2.652 4.959-5.197 7.222-2.512 2.243-3.865 3.469-4.303 3.752-.477-.309-2.143-1.823-4.303-3.752C5.141 14.072 2.5 12.167 2.5 9.122a4.989 4.989 0 0 1 4.708-5.218 4.21 4.21 0 0 1 3.675 1.941c.84 1.175.98 1.763 1.12 1.763s.278-.588 1.11-1.766a4.17 4.17 0 0 1 3.679-1.938m0-2a6.04 6.04 0 0 0-4.797 2.127 6.052 6.052 0 0 0-4.787-2.127A6.985 6.985 0 0 0 .5 9.122c0 3.61 2.55 5.827 5.015 7.97.283.246.569.494.853.747l1.027.918a44.998 44.998 0 0 0 3.518 3.018 2 2 0 0 0 2.174 0 45.263 45.263 0 0 0 3.626-3.115l.922-.824c.293-.26.59-.519.885-.774 2.334-2.025 4.98-4.32 4.98-7.94a6.985 6.985 0 0 0-6.708-7.218Z"></path>
                  </svg>
                </button> 
                <span class="inline"> <%= comments.likes %></span>
            </form>
              <!--If comment was created by current user, then show delete button-->
           <%if(comments[i].createdById == user.id){ %>
                <form 
                  action="/comment/deleteComment/<%=post._id%>/<%= comments[i]._id %>?_method=DELETE"
                  method="POST"
                  >
                  <button type="submit" class="">delete</button>
                </form>
                <%}%>
        </li>
      <% } %>
   
    </ul>
    </div>
   

    <form  action="/comment/createComment/<%=post._id%>" method="POST">
  
      <div class=" mr-1.5 py-8 lg:py-16 px-4 mx-auto max-w-screen-md">
              <label for="comment" ></label>
              
                  <textarea type="text" id="comment" rows="6" name="comment" placeholder="tell us about your experience!" class="block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"  required>  
                  </textarea>
                  <button type="submit"   
                    class="inline-flex items-center py-2.5 px-4 text-xs font-medium text-center text-black bg-primary-700 rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800"
                    >Post Comment</button>
             
          </div>
     
    </form>
  
  </div>




  

 
</div>




<%- include('partials/footer') -%>