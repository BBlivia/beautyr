
<div class="row">
    <p  class="text-l">By: <%= user.userName %></p>
    <h1> IG Name: <%= post.title %></h1>
    
    <div class="col-md-6">
      <img src="<%= post.image%>" class="img-fluid" alt="Responsive image">
    
      <div class="d-flex justify-content-between">
      <form
      class="col-1 "
      action="/post/likePost/<%= post.id %>?_method=PUT"
      method="POST"
    >
   
    <h3 class="inline"> <%= post.likes %></h3>
  </form>
  <button type="submit" class="  fa fa-heart"></button> 
  <%if(post.user == user.id){ %>
    <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3 "
        >
          <button class=" ml- 10  fa fa-trash" type="submit"></button>
        
        </form>
        <%}%>
      </div>
    </div>
  <div class="list-unstyled">
   
        <div class="p-1 g-2">
        <h3 class="font-weight-bold"> Title: <%= post.serviceProvider %></h3>
        <p class="font-weight-bold">LOCATION: <%= post.location %></p>
      
     
  
       </div>
  </div>
      
  
  
  <!--Comments-->
  
  <div class="mt-5">
    <h2 class="text-3xl">Add a comment</h2>
  
  
  
    <form class="mb-6" action="/comment/createComment/<%=post._id%>" method="POST">
  
      <div class="py-2 px-4 mb-4 bg-white rounded-lg rounded-t-lg border border-gray-200 dark:bg-gray-800 dark:border-gray-700">
              <label for="comment" class="sr-only"></label>
              <textarea id="comment" rows="6" name="comment"
                  class="px-0 w-full text-sm text-gray-900 border-0 focus:ring-0 focus:outline-none text-black placeholder-gray-400 bg-gray-800"
                  placeholder="Write a comment..." required></textarea>
          </div>
      <button type="submit"   
      class="inline-flex items-center py-2.5 px-4 text-xs font-medium text-center text-black bg-primary-700 rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800"
      >Post Comment</button>
    </form>
    </div>
  
  
    <!-- Display comments using For Loop -->
    <div >
      
      
    <ul tabindex="0">
      <% for(var i=0; i<comments.length; i++) {%>
        <li class="d-flex justify-content-between  ">
          <!--Add user attribution-->
          <span> <%= comments[i].createdByUsername%> </span>
          <p  class="text-gray-500 dark:text-gray-400"> <%= comments[i].comment%> </p> 
           
            
            <form 
                  action="/comment/likeComment/<%=post._id%>/<%= comments[i]._id %>?_method=PUT"
                  method="POST"
                  >
                  <button type="submit" class="  fa fa-heart"></button>
                  <h3 class="inline"> <%= post.likes %></h3>
                </form>
                </form>
          <!--If comment was created by current user, then show delete button-->
           <%if(comments[i].createdById == user.id){ %>
                <form 
                  action="/comment/deleteComment/<%=post._id%>/<%= comments[i]._id %>?_method=DELETE"
                  method="POST"
                  >
                  <button type="submit" class="  fa fa-trash"></button>
                </form>
                <%}%>
        </li>
      <% } %>
   
    </ul>
    </div>


