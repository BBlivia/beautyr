<%- include('partials/header') -%>



<section class="bg-white dark:bg-gray-900 tt h-max">

  <div class="py-8 lg:py-16 px-4 mx-auto max-w-screen-md">
    
     

    <h1 class="mb-4 text-4xl tracking-tight font-extrabold text-center text-gray-900 dark:text-white"> Welcome to <span class="font-bold">Beauty Review,</span></h1>
     <h3 class="text-2xl">A place for Baddies to share their beauty <span class="font-bold text-2xl">(Hair and Makeup) service experience! </span></h3>
    <p class="mb-8 lg:mb-16 font-light text-center text-gray-500 dark:text-gray-400 sm:text-xl">Found a stylist or Makeup artist on Instagram? Seach their name to see what other baddies are saying about their services</p>
   
   
   
   
    <div class="dropdown dropdown-bottom w-full">
      <label tabindex="0"  class=" text-lg mb-2 text-gray-400 cursor-pointer font-medium ml-5">Clcik to Write a Review</label>
      <form action="/post/createPost" enctype="multipart/form-data" method="POST" class="space-y-8 dropdown-content w-full">
        <div>
          <label for="serviceProvider" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Title</label>
          <input name="serviceProvider" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="title" required>
        </div>
       
        <div> 
          <label for="title" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Name of Provider:</label>
           <input type="text" id="title" name="title" placeholder="IG Name"  class="block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"  required>
        </div>

        <div>
          <label for="service" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Service</label>
          <select name="service" id="service">
              <option>Options</option>
              <option value="Makeup ">Makeup</option>
              <option value="Hair">Hair</option>
          </select>
        </div>

        <div> 
          <label for="location" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Location:</label>
          <input type="text" id="location" name="location" placeholder="City,State"  class="block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"  required>
        </div>

        <div> 
          <label for="imgUpload" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Location:</label>
          <input type="file" id="imageUpload" name="file" placeholder="City,State"  class="block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"  required>
        </div>

        <div>
          <label for="caption" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Location:</label> 
          <textarea type="text" name="caption" id="caption" rows="6" placeholder="tell us about your experience!" class="block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"  required></textarea>
        </div>
        <button type="submit" value="Upload" class="  px py-3 px-5 text-sm font-medium text-center text-black rounded-lg bg-primary-700 sm:w-fit hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Add Review!</button>
      </form>
     </div>
  </div>

</section>




