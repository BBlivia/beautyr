<%- include('partials/header') -%>


<form action='/post/searchItem/' method="GET">
  <input id="searchInput" type="text" placeholder="search stylist or artist by IG name" name="title">
  <button type="submit" id="searchButton">SEARCH INFO</button>
</form>

<div class="container">
  <div class="row mt-5">
      <div class="col-6">
        <div class="input-container">
          <div >
              <p><strong>User Name</strong>: <%= user.userName %>
                <img src="" alt="profile-pic" class="profile-img">
              </p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div class="mt-5">
            <h2>Add a post</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input class="textarea textarea-info" type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="serviceProvider" class="form-label">Service</label>
                <select name="serviceProvider" id="serviceProvider">
                  <option value="Makeup">Makeup</option>
                  <option value="Hair">Hair</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="location" class="form-label">Location: City, State</label>
                <textarea class="textarea textarea-info" placeholder="Location"  name="location"></textarea>
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label"> experience</label>
                <textarea class="textarea textarea-info" placeholder="Bio"  name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input class="textarea textarea-info" type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>


    </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn " href="/feed">Return to Feed</a>
        </div>  
        <div class="row justify-content-center mt-5">
          <a class="btn" href="/account">Edit Profile</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>