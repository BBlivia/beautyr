<%- include('partials/header') -%>
 



 
    <div class="container card-container">
      <h1>Explore Reviews</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% for(var i=0; i<posts.length; i++) {%>
      <div class="col">
        <div class="card h-100">
          <img src="<%= posts[i].image%>" class="card-img-top" alt="...">
          <div class="card-body">
            <p> Title: <%= posts[i].serviceProvider%> </p>
            <h5 class="card-title">IG Name: <%= posts[i].title%></h5>
            
            <p class="card-text"><i class="px-1 bi bi-heart"></i><%= posts[i].likes %></p>
            <p class="card-text"><small class="text-muted">By: <%= userName[i]%></small></p>
            <label for="caption" class="form-label font-bold"> experience</label>
            <p class="card-text"><%= posts[i].caption %></p>
            <a href="/post/<%= posts[i]._id%>" class="btn btn-outline-primary">View Review</a>
          </div>
          <div class="card-footer">
            <span class="badge bg-primary"><%= posts[i].location%></span>
            

            <span class="badge rounded-pill bg-secondary"><%= posts[i].dish%></span>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>

 
<%- include('partials/footer') -%>



